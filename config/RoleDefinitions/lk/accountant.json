{
  "name": "Бухгалтер",
  "slug": "accountant",
  "version": "1.0.0",
  "context": "organization",
  "interface": "lk",
  "description": "Управление финансами и отчетностью организации",
  
  "system_permissions": [
    "organization.view",
    "modules.billing",
    "profile.view",
    "profile.edit"
  ],
  
  "module_permissions": {
    "projects": ["projects.view", "projects.view_budget"],
    "materials": ["materials.view", "materials.view_costs"],
    "reports": ["reports.*"],
    "finance": ["finance.*"],
    "contracts": ["contracts.view", "contracts.view_financial"],
    "multi-organization": [
      "multi-organization.view",
      "multi-organization.dashboard",
      "multi-organization.reports.view",
      "multi-organization.reports.dashboard",
      "multi-organization.reports.financial",
      "multi-organization.reports.kpi"
    ],
    "project-management": [
      "projects.view", "projects.statistics"
    ],
    "contract-management": [
      "contracts.view", "contracts.analytics", "contracts.completed_works.view",
      "contracts.performance_acts.view", "contracts.performance_acts.export",
      "contracts.payments.view", "contracts.payments.create", "contracts.payments.edit",
      "agreements.view", "specifications.view"
    ],
    "catalog-management": [
      "materials.view", "materials.balances.view", "suppliers.view", 
      "contractors.view", "work_types.view", "cost_categories.view"
    ],
    "workflow-management": [
      "site_requests.view", "site_requests.statistics",
      "completed_works.view"
    ],
    "advance-accounting": [
      "advance_transactions.view", "advance_transactions.approve", "advance_transactions.report",
      "advance_settings.view", "users.advance_balance.view", "users.advance_transactions.view",
      "users.funds.issue", "users.funds.return", "reports.advance_accounts.view", "reports.advance_accounts.export"
    ],
    "act-reporting": [
      "act_reports.view", "act_reports.contracts.view", "act_reports.export.pdf", "act_reports.export.excel"
    ],
    "time-tracking": [
      "time_tracking.view", "time_tracking.statistics", "time_tracking.reports"
    ],
    "material-analytics": [
      "materials.analytics.summary", "materials.analytics.cost_history", "materials.analytics.inventory_report",
      "materials.analytics.cost_dynamics_report"
    ]
  },
  
  "interface_access": ["lk"],
  
  "hierarchy": {
    "can_manage_roles": [],
    "cannot_manage": ["*"]
  },
  
  "conditions": {
    "time": {
      "working_hours": "09:00-18:00",
      "working_days": [1, 2, 3, 4, 5]
    },
    "budget": {
      "max_transaction": 100000,
      "daily_limit": 500000
    }
  }
}
