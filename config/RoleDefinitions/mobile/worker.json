{
  "name": "Рабочий",
  "slug": "worker",
  "version": "1.0.0",
  "context": "project",
  "interface": "mobile",
  "description": "Исполнение работ на строительном объекте",
  
  "system_permissions": [
    "profile.view",
    "profile.edit"
  ],
  
  "module_permissions": {
    "projects": [
      "projects.view_assigned",
      "projects.update_task_status",
      "projects.upload_progress_photos"
    ],
    "materials": [
      "materials.view_assigned",
      "materials.confirm_usage"
    ],
    "reports": [
      "reports.create_work_report",
      "reports.photo_upload"
    ],
    "project-management": [
      "projects.view"
    ],
    "contract-management": [
      "contracts.view"
    ],
    "catalog-management": [
      "materials.view"
    ],
    "workflow-management": [
      "site_requests.view", "completed_works.view"
    ],
    "advance-accounting": [
      "advance_transactions.view", "users.advance_balance.view"
    ],
    "act-reporting": [
      "act_reports.view"
    ],
    "time-tracking": [
      "time_tracking.view", "time_tracking.create", "time_tracking.edit"
    ],
    "material-analytics": [],
    "contractor-portal": [],
    "file-management": [
      "personal_files.view"
    ],
    "system-logs": [],
    "rate-management": [
      "rate_coefficients.view"
    ],
    "report-templates": [],
    "data-filters": [
      "filters.quick_stats.view"
    ],
    "dashboard-widgets": [
      "dashboard.view"
    ],
    "schedule-management": [
      "schedule.view"
    ]
  },
  
  "interface_access": ["mobile"],
  
  "hierarchy": {
    "can_manage_roles": [],
    "cannot_manage": ["*"]
  },
  
  "conditions": {
    "time": {
      "working_hours": "07:00-19:00",
      "working_days": [1, 2, 3, 4, 5, 6]
    },
    "location": {
      "require_geolocation": true
    }
  }
}
