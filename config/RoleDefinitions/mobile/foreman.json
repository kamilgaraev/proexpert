{
  "name": "Прораб",
  "slug": "foreman",
  "version": "1.0.0",
  "context": "project",
  "interface": "mobile",
  "description": "Руководство строительным процессом на объекте",
  
  "system_permissions": [
    "profile.view",
    "profile.edit"
  ],
  
  "module_permissions": {
    "projects": [
      "projects.view",
      "projects.update_progress",
      "projects.upload_photos",
      "projects.create_reports"
    ],
    "materials": [
      "materials.view",
      "materials.request",
      "materials.track_usage"
    ],
    "reports": [
      "reports.create",
      "reports.photo_upload",
      "reports.daily_report"
    ],
    "personnel": [
      "personnel.view_assigned",
      "personnel.assign_tasks",
      "personnel.track_attendance"
    ],
    "project-management": [
      "projects.view", "projects.materials.view", "projects.work_types.view"
    ],
    "contract-management": [
      "contracts.view", "contracts.completed_works.view"
    ],
    "catalog-management": [
      "materials.view", "work_types.view"
    ],
    "workflow-management": [
      "site_requests.view", "site_requests.create", "site_requests.files.upload",
      "completed_works.view", "completed_works.create", "completed_works.materials.sync"
    ],
    "advance-accounting": [
      "advance_transactions.view", "advance_transactions.create", "advance_transactions.report",
      "users.advance_balance.view"
    ],
    "act-reporting": [
      "act_reports.view", "act_reports.works.view"
    ],
    "time-tracking": [
      "time_tracking.view", "time_tracking.create", "time_tracking.edit", "time_tracking.submit"
    ],
    "material-analytics": [
      "materials.analytics.low_stock", "materials.analytics.most_used"
    ],
    "contractor-portal": [
      "contractor_invitations.view"
    ],
    "file-management": [
      "personal_files.view", "personal_files.upload"
    ],
    "system-logs": [
      "system-logs.work_completion.view"
    ],
    "rate-management": [
      "rate_coefficients.view"
    ],
    "report-templates": [
      "report_templates.view"
    ],
    "data-filters": [
      "filters.completed_works.view", "filters.quick_stats.view"
    ],
    "dashboard-widgets": [
      "dashboard.view", "dashboard.recent_activity.view"
    ],
    "schedule-management": [
      "schedule.view", "schedule.notifications"
    ]
  },
  
  "interface_access": ["mobile"],
  
  "hierarchy": {
    "can_manage_roles": ["worker"],
    "cannot_manage": [
      "foreman",
      "project_manager",
      "organization_admin",
      "organization_owner"
    ]
  },
  
  "conditions": {
    "project_count": {
      "max_projects": 5
    },
    "location": {
      "require_geolocation": true
    }
  }
}
