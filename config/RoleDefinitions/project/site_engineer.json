{
  "name": "Инженер объекта",
  "slug": "site_engineer",
  "version": "1.0.0",
  "context": "project",
  "interface": "lk",
  "description": "Техническое руководство строительными работами",
  
  "system_permissions": [
    "profile.view",
    "profile.edit"
  ],
  
  "module_permissions": {
    "projects": [
      "projects.view",
      "projects.edit_technical",
      "projects.create_technical_reports",
      "projects.upload_drawings"
    ],
    "materials": [
      "materials.view",
      "materials.calculate_requirements",
      "materials.approve_technical"
    ],
    "reports": [
      "reports.view",
      "reports.create_technical",
      "reports.create_quality_control"
    ],
    "finance": [
      "finance.view_project_budget"
    ],
    "project-management": [
      "projects.view", "projects.materials.view", "projects.work_types.view",
      "projects.statistics"
    ],
    "contract-management": [
      "contracts.view", "contracts.completed_works.view",
      "contracts.performance_acts.view", "specifications.view", "specifications.create", "specifications.edit"
    ],
    "catalog-management": [
      "materials.view", "work_types.view", "measurement_units.view"
    ],
    "workflow-management": [
      "site_requests.view", "site_requests.create", 
      "completed_works.view", "completed_works.create", "completed_works.edit"
    ],
    "advance-accounting": [
      "advance_transactions.view", "users.advance_balance.view"
    ],
    "act-reporting": [
      "act_reports.view", "act_reports.create", "act_reports.works.view"
    ],
    "time-tracking": [
      "time_tracking.view", "time_tracking.create", "time_tracking.edit"
    ],
    "material-analytics": [
      "materials.analytics.usage_by_projects", "materials.analytics.low_stock"
    ],
    "contractor-portal": [
      "contractor_invitations.view", "contractor_invitations.create", "organizations.search"
    ],
    "file-management": [
      "personal_files.view", "personal_files.create_folder", "personal_files.upload"
    ],
    "system-logs": [
      "system-logs.material_usage.view", "system-logs.work_completion.view"
    ],
    "rate-management": [
      "rate_coefficients.view", "rate_coefficients.apply"
    ],
    "report-templates": [
      "report_templates.view", "report_templates.create"
    ],
    "data-filters": [
      "filters.contracts.view", "filters.completed_works.view", "filters.custom.create"
    ],
    "dashboard-widgets": [
      "dashboard.view", "dashboard.recent_activity.view"
    ],
    "schedule-management": [
      "schedule.view", "schedule.create", "schedule.edit"
    ],
    "budget-estimates": [
      "estimates.view",
      "estimates.create",
      "estimates.edit"
    ]
  },
  
  "interface_access": ["lk", "mobile"],
  
  "hierarchy": {
    "can_manage_roles": ["worker"],
    "cannot_manage": [
      "site_engineer",
      "foreman", 
      "project_manager"
    ]
  },
  
  "conditions": {
    "project_count": {
      "max_projects": 3
    }
  }
}
