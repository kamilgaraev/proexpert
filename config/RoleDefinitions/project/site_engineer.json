{
  "name": "Инженер объекта",
  "slug": "site_engineer",
  "version": "1.0.0",
  "context": "project",
  "interface": "lk",
  "description": "Техническое руководство строительными работами",
  
  "system_permissions": [
    "profile.view",
    "profile.edit"
  ],
  
  "module_permissions": {
    "projects": [
      "projects.view",
      "projects.edit_technical",
      "projects.create_technical_reports",
      "projects.upload_drawings"
    ],
    "materials": [
      "materials.view",
      "materials.calculate_requirements",
      "materials.approve_technical"
    ],
    "reports": [
      "reports.view",
      "reports.create_technical",
      "reports.create_quality_control"
    ],
    "finance": [
      "finance.view_project_budget"
    ],
    "project-management": [
      "projects.view", "projects.materials.view", "projects.work_types.view",
      "projects.statistics"
    ],
    "contract-management": [
      "contracts.view", "contracts.completed_works.view",
      "contracts.performance_acts.view", "specifications.view", "specifications.create", "specifications.edit"
    ],
    "catalog-management": [
      "materials.view", "work_types.view", "measurement_units.view"
    ],
    "workflow-management": [
      "site_requests.view", "site_requests.create", 
      "completed_works.view", "completed_works.create", "completed_works.edit"
    ]
  },
  
  "interface_access": ["lk", "mobile"],
  
  "hierarchy": {
    "can_manage_roles": ["worker"],
    "cannot_manage": [
      "site_engineer",
      "foreman", 
      "project_manager"
    ]
  },
  
  "conditions": {
    "project_count": {
      "max_projects": 3
    }
  }
}
