{
  "name": "Руководитель проекта",
  "slug": "project_manager",
  "version": "1.0.0",
  "context": "project",
  "interface": "lk",
  "description": "Полное управление проектом и командой",
  
  "system_permissions": [
    "profile.view",
    "profile.edit"
  ],
  
  "module_permissions": {
    "projects": ["projects.*"],
    "materials": [
      "materials.view",
      "materials.edit",
      "materials.request",
      "materials.approve_requests"
    ],
    "reports": ["reports.*"],
    "finance": [
      "finance.view_project_budget",
      "finance.manage_project_expenses"
    ],
    "contracts": [
      "contracts.view",
      "contracts.edit_project_contracts"
    ],
    "personnel": [
      "personnel.view",
      "personnel.assign",
      "personnel.manage_team"
    ],
    "project-management": [
      "projects.view", "projects.edit", "projects.analytics",
      "projects.foremen.assign", "projects.foremen.detach",
      "projects.materials.view", "projects.work_types.view",
      "projects.statistics"
    ],
    "contract-management": [
      "contracts.view", "contracts.edit", "contracts.analytics",
      "contracts.completed_works.view", "contracts.performance_acts.view",
      "contracts.performance_acts.create", "contracts.performance_acts.edit",
      "contracts.payments.view", "agreements.view", "specifications.view"
    ],
    "catalog-management": [
      "materials.view", "materials.edit", "suppliers.view", "contractors.view",
      "work_types.view", "measurement_units.view"
    ],
    "workflow-management": [
      "site_requests.view", "site_requests.create", "site_requests.edit",
      "site_requests.statistics", "completed_works.view", "completed_works.create",
      "completed_works.edit", "completed_works.materials.sync"
    ]
  },
  
  "interface_access": ["lk", "mobile"],
  
  "hierarchy": {
    "can_manage_roles": [
      "site_engineer",
      "foreman",
      "worker",
      "observer"
    ],
    "cannot_manage": [
      "project_manager",
      "organization_admin",
      "organization_owner"
    ]
  },
  
  "conditions": {
    "project_count": {
      "max_projects": 10
    },
    "budget": {
      "max_project_budget": 5000000
    }
  }
}
