{
    "name": "Отчеты",
    "slug": "reports",
    "version": "2.0.0",
    "type": "feature",
    "billing_model": "subscription",
    "category": "analytics",
    "description": "Унифицированный модуль отчетности, включающий базовые отчеты и расширенную аналитику.",
    "class_name": "App\\BusinessModules\\Features\\Reports\\ReportsModule",
    "service_provider": "App\\BusinessModules\\Features\\Reports\\ReportsServiceProvider",
    "pricing": {
        "monthly": 2900,
        "yearly": 29000,
        "currency": "RUB"
    },
    "permissions": {
        "view": "reports.view",
        "export": "reports.export",
        "manage_templates": "reports.manage_templates",
        "custom_reports": "reports.custom_reports",
        "share": "reports.share",
        "schedule": "reports.schedule",
        "official_reports": "reports.official_reports",
        "predictive": "reports.predictive"
    },
    "features": {
        "basic_reports": true,
        "custom_builder": true,
        "financial_analytics": true,
        "official_forms": true,
        "predictive_analytics": true,
        "scheduled_reports": true
    },
    "dependencies": [
        "organizations",
        "users",
        "projects"
    ],
    "conflicts": [
        "basic-reports",
        "advanced-reports"
    ],
    "limits": {
        "max_custom_reports": 50,
        "max_scheduled_reports": 10
    },
    "routes": [
        "routes/api/v1/admin/reports.php",
        "routes/api/v1/admin/custom-reports.php"
    ],
    "settings": [
        {
            "key": "default_export_format",
            "type": "select",
            "options": [
                "pdf",
                "xlsx",
                "csv"
            ],
            "default": "pdf"
        }
    ]
}