{
  "dashboard": {
    "title": "ProHelper - Error Tracking",
    "tags": ["errors", "monitoring", "prohelper"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Unresolved Errors (Last 24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "rawSql": "SELECT COUNT(*) FROM application_errors WHERE status = 'unresolved' AND last_seen_at > NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Critical Errors",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "rawSql": "SELECT COUNT(*) FROM application_errors WHERE severity = 'critical' AND status = 'unresolved' AND last_seen_at > NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "orange"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Errors Timeline",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 24, "h": 8},
        "targets": [
          {
            "rawSql": "SELECT DATE_TRUNC('hour', last_seen_at) as time, COUNT(*) as errors FROM application_errors WHERE last_seen_at BETWEEN $__timeFrom() AND $__timeTo() GROUP BY time ORDER BY time",
            "format": "time_series"
          }
        ]
      },
      {
        "title": "Recent Errors",
        "type": "table",
        "gridPos": {"x": 0, "y": 12, "w": 24, "h": 10},
        "targets": [
          {
            "rawSql": "SELECT id, error_group, exception_class, LEFT(message, 100) as message, module, occurrences, severity, status, last_seen_at FROM application_errors WHERE status = 'unresolved' ORDER BY last_seen_at DESC LIMIT 50",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "id": 0,
                "error_group": 1,
                "exception_class": 2,
                "message": 3,
                "module": 4,
                "occurrences": 5,
                "severity": 6,
                "status": 7,
                "last_seen_at": 8
              }
            }
          }
        ]
      },
      {
        "title": "Top Errors by Occurrences",
        "type": "table",
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 8},
        "targets": [
          {
            "rawSql": "SELECT error_group, exception_class, occurrences, last_seen_at FROM application_errors WHERE status = 'unresolved' ORDER BY occurrences DESC LIMIT 10",
            "format": "table"
          }
        ]
      },
      {
        "title": "Errors by Module",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 8},
        "targets": [
          {
            "rawSql": "SELECT module, SUM(occurrences) as total FROM application_errors WHERE status = 'unresolved' AND last_seen_at > NOW() - INTERVAL '7 days' GROUP BY module ORDER BY total DESC",
            "format": "table"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {"from": "now-24h", "to": "now"}
  }
}

